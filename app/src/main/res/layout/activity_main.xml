<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF9800"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:src="@drawable/toldo4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <ImageButton
                android:layout_width="76dp"
                android:layout_height="75dp"
                android:src="@drawable/perfil6"
                android:background="#00FFFFFF"
                android:layout_marginBottom="10dp"
                android:id="@+id/perfil"
                />
            <ImageButton
                android:layout_width="76dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:src="@drawable/credit"
                android:layout_marginBottom="10dp"
                android:id="@+id/pago"
                />
            <ImageButton
                android:layout_width="76dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:src="@drawable/location"
                android:layout_marginBottom="10dp"
                android:id="@+id/nosotros"
                />
            <ImageButton
                android:layout_width="76dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:src="@drawable/ajustes"
                android:layout_marginBottom="10dp"
                android:id="@+id/ajustes"
                />
            <ImageButton
                android:layout_width="76dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                android:src="@drawable/carrito"
                android:id="@+id/carrito"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="-15dp"
                android:text="(0)"
                android:id="@+id/productos"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_marginLeft="8dp"
            android:padding="5dp">

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/platano"
                    android:background="#65FFC107"
                    android:layout_margin="5dp"
                    android:id="@+id/platano"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/manzana"
                    android:background="#4DFFEB3B"
                    android:layout_margin="5dp"
                    android:id="@+id/manzana"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uvas"
                    android:background="#65FFC107"
                    android:layout_margin="5dp"
                    android:id="@+id/uvas"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zanahoria"
                    android:background="#4DFFEB3B"
                    android:layout_margin="5dp"
                    android:id="@+id/zanahoria"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/aguacate"
                    android:background="#65FFC107"
                    android:layout_margin="5dp"
                    android:id="@+id/aguacate"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jitomate"
                    android:background="#4DFFEB3B"
                    android:layout_margin="5dp"
                    android:id="@+id/jitomate"
                    />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>